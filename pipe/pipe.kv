<NewGraphPopup@Popup>:
    size_hint: 0.8, 0.5
    title: "Create a new graph"
    on_open: self.ids.name.focus=True

    BoxLayout:
        size_hint: 0.9, 0.9
        pos: root.pos
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "Graph Name"
